@using Microsoft.ApplicationInsights.AspNetCore
@inject JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>

<html ng-app="BookishNet">
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>BookishNet</title>
    <link rel="shortcut icon" href="/assets/img/apple-icon.png"/>
    <environment names="Development">

        <!-- Fonts and icons -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"/>
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css"/>
        <!-- CSS Files -->
        <link href="assets/css/material-kit.css" rel="stylesheet"/>
        <link href="assets/css/jumbotron-narrow.css" rel="stylesheet"/>
        <link href="assets/css/animations.css" rel="stylesheet"/>
        <link rel="stylesheet" type="text/css" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"/>
        <link rel="stylesheet" type="text/css" href="~/assets/css/main.css"/>
        <link rel="stylesheet" type="text/css" href="~/assets/css/login.css"/>
        <link rel="stylesheet" type="text/css" href="~/assets/css/register.css"/>
    </environment>
    <environment names="Staging,Production">
        <title>BookishNet</title>
        <link rel="shortcut icon" href="/assets/img/apple-icon.png"/>
        <!-- Fonts and icons -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"/>
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css"/>
        <!-- CSS Files -->
        <link href="assets/css/material-kit.css" rel="stylesheet"/>
        <link href="assets/css/jumbotron-narrow.css" rel="stylesheet"/>
        <link href="assets/css/animations.css" rel="stylesheet"/>
        <link rel="stylesheet" type="text/css" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"/>
        <link rel="stylesheet" type="text/css" href="~/assets/css/main.css"/>
        <link rel="stylesheet" type="text/css" href="~/assets/css/login.css"/>
        <link rel="stylesheet" type="text/css" href="~/assets/css/register.css"/>
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body >
<div id="loader-wrapper">
    <div id="loader"></div>

    <div class="loader-section section-left"></div>
    <div class="loader-section section-right"></div>

</div>
<nav class="navbar navbar-fixed-top navbar-info">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#/home">BookishNet</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li ng-if="!sessionData.isLoggedIn">
                <a href="#/home"><i class="fa fa-home"></i>Acasa</a>
            </li>
            <li>
                <a href="#/books"><i class="fa fa-book"></i>Carti</a>
            </li>
            <li>
                <a href="#/users"><i class="fa fa-user"></i>Utilizatori</a>
            </li>
            <li ng-if="!sessionData.isLoggedIn">
                <a href="#/register"><i class="fa fa-plus"></i>Inregistreaza-te</a>
            </li>
            <li ng-if="sessionData.isLoggedIn">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Bine ai venit, {{sessionData.username}} <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#/home"><i class="fa fa-home"></i>Acasa</a>
                            </li>

                            <li>
                                <a ng-if="sessionData.role === 'User' || sessionData.role === 'Author'" ng-href="#/users:{{sessionData.id }}">Profil</a>
                            </li>
                            <li class="divider"></li>
                            <li ng-if="sessionData.isLoggedIn" ng-controller="loginController">
                                <a href="#/logout" ng-click="logout()"><i class="fa fa-sign-out"></i> Delogheaza-te </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</nav>
<div id="container">
    @RenderBody()
    <div ng-view></div>
</div>
<footer class="text-center">
    <p class="align-bottom"> ★ BookishNet te aduce mai aproape de cartile tale preferate. ★</p>
</footer>
<environment names="Development">
    <!--Libraries-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular-route.js"></script>
    <script src="https://code.angularjs.org/1.3.0/angular-animate.min.js"></script>
    <script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>
    <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.9-1/pbkdf2.min.js"></script>-->
    <script src="assets/js/material.min.js" type="text/javascript"></script>
    <script src="assets/js/material-kit.js" type="text/javascript"></script>
    <script src="assets/js/main.js" type="text/javascript"></script>

    <!--Application-->
    <script type="text/javascript" src="~/app/app.js"></script>

    <!--Directives-->
    <script type="text/javascript" src="~/app/directives/loadingRequestDirective.js"></script>
    <script type="text/javascript" src="~/app/directives/passwordMatchDirective.js"></script>
    <script type="text/javascript" src="~/app/directives/bookItemDirective.js"></script>
    <script type="text/javascript" src="~/app/directives/addBookDirective.js"></script>
    <script type="text/javascript" src="~/app/directives/editBookDirective.js"></script>
    <script type="text/javascript" src="~/app/directives/userItemDirective.js"></script>
    <script type="text/javascript" src="~/app/directives/editUserDirective.js"></script>
    <script type="text/javascript" src="~/app/directives/contactUserDirective.js"></script>
    <!--Services-->
    <script type="text/javascript" src="~/app/services/loginService.js"></script>
    <script type="text/javascript" src="~/app/services/userService.js"></script>
    <script type="text/javascript" src="~/app/services/bookService.js"></script>
    <script type="text/javascript" src="~/app/services/emailService.js"></script>
    <script type="text/javascript" src="~/app/services/genreService.js"></script>
    <!--Controllers-->
    <script type="text/javascript" src="~/app/controllers/loginController.js"></script>
    <script type="text/javascript" src="~/app/controllers/registerController.js"></script>
    <script type="text/javascript" src="~/app/controllers/homeController.js"></script>
    <script type="text/javascript" src="~/app/controllers/booksController.js"></script>
    <script type="text/javascript" src="~/app/controllers/bookController.js"></script>
    <script type="text/javascript" src="~/app/controllers/usersController.js"></script>
    <script type="text/javascript" src="~/app/controllers/userController.js"></script>
    <script type="text/javascript" src="~/app/controllers/emailController.js"></script>
    <script type="text/javascript" src="~/app/controllers/chatController.js"></script>
    <!--Routing-->
    <script type="text/javascript" src="~/app/appRoute.js"></script>
</environment>
<environment names="Staging,Production">

</environment>
</body>
</html>